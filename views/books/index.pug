extends ../layout

block content
  h1 Books
  p Listing all books
  p
    a.button(href="/books/new") Create New Book

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody

      each book in books
        tr
          td= book.title
            a(href = "/books/" + book.id)  Read More &rarr;
          td= book.author
          td= book.genre
          td= book.year
